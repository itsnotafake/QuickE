<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:clickable="true"
    style="@android:style/Widget.ActionButton">

    <ImageView
        android:id="@+id/actionbar_list"
        android:src="@drawable/ic_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="0dp"
        android:contentDescription="@string/action_list"/>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/actionbar_listtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="17sp"
        android:text="@null"
        android:textSize="12sp"
        android:textColor="@color/WHITE"
        android:gravity="center"
        android:background="@android:drawable/ic_notification_overlay"

        android:layout_alignTop="@id/actionbar_list"
        android:layout_alignRight="@id/actionbar_list"
        android:layout_alignEnd="@id/actionbar_list" />
</RelativeLayout>